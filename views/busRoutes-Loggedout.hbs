<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bus Routes</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"/>
    <link rel="stylesheet" href="/busRoutes.css" />
  </head>

  <body>
    <div>
      <h1 class="introduction">
        <span class="introduction-text">Brac University Bus Routes <i class="fa-solid fa-route"></i></span>
        <button class="custom-button" onclick="redirectToBookingPage()">CampusConnect</button>
      </h1>
    </div>

    <div>
      <h1 class="going-trip"><span class="going-trip-text">Trip Both-Ways</span></i></h1>
    </div>
    
    <div class="container">
      <div class="vertical-line"></div>
      <div class="box box-left">
        <i class="fa-solid fa-shop"></i>
        <div class="info" id = "New Market">
          <h2></h2>
          <p></p>
        </div>
      </div>
      <div class="box box-right">
        <i class="fa-solid fa-city"></i>
        <div class="info" id = "Dhanmondi">
          <h2></h2>
          <p></p>
        </div>
      </div>
      <div class="box box-left">
        <i class="fa-solid fa-hospital"></i>
        <div class="info" id = "Kalabagan">
          <h2></h2>
          <p></p>
        </div>
      </div>
      <div class="box box-right">
        <i class="fa-solid fa-building-columns"></i>
        <div class="info" id = "Manik Mia Avenue">
          <h2></h2>
            <p></p>
        </div>
      </div>
      <div class="box box-left">
        <i class="fa-solid fa-road"></i>
        <div class="info" id = "Sobhanbag">
          <h2></h2>
          <p></p>
        </div>
      </div>
      <div class="box box-right">
        <i class="fa-solid fa-map-pin"></i>
        <div class="info" id = "BRAC University">
          <h2></h2>
          <p></p>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>
        async function fetchRoutesData() {
            try {
                const response = await axios.get('/auth/api/fetchroutes');
                const routesData = response.data;

                for (let i = 0; i < routesData.length; i++) {
                  const route = routesData[i];
                  const infoDiv = document.getElementById(route.Name);
                  if (infoDiv) {
                    infoDiv.querySelector('h2').innerText = route.Name;
                    infoDiv.querySelector('p').innerHTML = `Place: ${route.Place} <br> Time: ${route.Time}`;
                  } else {
                    console.error(`HTML element with ID ${route.Name} not found.`);
                  }
                }

            } catch (error) {
                console.error('Error fetching bus routes:', error);
            }
        }

        fetchRoutesData();
    </script>
    <script>
        function redirectToBookingPage() {
          window.location.href = '/campusconnect';
        }
    </script>
  </body>
</html>